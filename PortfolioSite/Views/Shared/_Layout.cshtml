<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/portCSS")
    <link href='http://fonts.googleapis.com/css?family=Ubuntu:300,400,500,700' rel='stylesheet' type='text/css' />
    <!-- Font awesome for the social icons and other icons -->
    <link rel='stylesheet' href='http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css' type='text/css' />
</head>
<body>
    <div class="header">
        <div class="container">
            <div class="logo">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                    <h3 class="text-center">PATRICK YEE</h3>
                    <img class="img-circle" src="https://lh3.googleusercontent.com/-G07gdjMMKN8/VPTt4A--0KI/AAAAAAAAACw/emsVqhH1bRk/s200/Feb%2B20%2C%2B2015%2B12%3A36%3A25%2BPM.jpg" alt="Google+ Portfolio Photo" />
                </a>
            </div>
            @* mobile menu *@
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="menu"></span>
            </button>
            <div class="navbar-collapse collapse navigate">
                <ul class="cl-effect-3">
                    <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                    <li><a href="@Url.Action("Projects", "Home")">Projects</a></li>
                    <li><a href="@Url.Action("About", "Home")">About</a></li>
                    <li><a href="@Url.Action("Resume", "Home")">Resume</a></li>
                    <li><a href="@Url.Action("Contact", "Home")">Contact</a></li>
                </ul>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
    <div class="container body-content">
        <div class="social">
            <div class="text-right">
                <a href="https://github.com/patrickshyee" target="_blank"><i class="fa fa-github-square fa-2x"></i></a>
                <a href="https://plus.google.com/u/0/115645219445068963390/about" target="_blank"><i class="fa fa-google-plus-square fa-2x"></i></a>
                <a href="https://www.facebook.com/5k3l3t0r" target="_blank"><i class="fa fa-facebook-square fa-2x"></i></a>
                <a href="http://steamcommunity.com/id/5k3l3t0r" target="_blank"><i class="fa fa-steam-square fa-2x"></i></a>
                <a href="https://soundcloud.com/5k3l3t0rgamer" target="_blank"><i class="fa fa-soundcloud fa-2x"></i></a>
                <h3>Curious Dedicated Successful</h3>
            </div>
        </div>
        @RenderBody()
        <hr />
        <footer class="text-center">
            <p>&copy; @DateTime.Now.Year - PY Development</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/ko")
    @*<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js"></script>*@
    @*<script src="~/Scripts/angular.min.js" type="text/javascript"></script>
    @Scripts.Render("~/bundles/TotallyNG")*@
    @RenderSection("scripts", required: false)
</body>
</html>
